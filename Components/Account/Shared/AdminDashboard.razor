	private void LinkToUserAdmin()
	{
		Navigation.NavigateTo($"/user-maintenance");
	}

	private void LinkToEquipmentAdmin()
	{
		Navigation.NavigateTo($"/equipment-availability");
	}

	private void LinkToStaffJobListing()
	{
